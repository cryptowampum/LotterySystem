# ========================================
# REQUIRED: ThirdWeb & Contract Configuration
# ========================================

# ThirdWeb Client ID (get from https://thirdweb.com/dashboard)
VITE_THIRDWEB_CLIENT_ID=

# Your deployed NFT contract address
VITE_CONTRACT_ADDRESS=

# Smart wallet factory address
VITE_THIRDWEB_FACTORY_ADDRESS=

# Network Configuration
VITE_APP_CHAIN_ID=137
VITE_APP_NETWORK_NAME=polygon

# ========================================
# OPTIONAL: App Branding
# ========================================

# App name displayed throughout the UI
VITE_APP_NAME=PolyPrize

# Emoji shown with the app name
VITE_APP_EMOJI=ðŸ¦„

# Platform name (used in access messages)
VITE_PLATFORM_NAME=polygon.ac

# Platform URL (for "How to Access" links)
VITE_PLATFORM_URL=https://polygon.ac

# Prize amount shown in UI
VITE_PRIZE_AMOUNT=$100

# URL shared on social media
VITE_SHARE_URL=https://app.polygon.ac

# ========================================
# OPTIONAL: Social Media Handles
# ========================================

# Twitter/X handle(s) for share text
VITE_TWITTER_HANDLE=@MyUnicornAcct @0xPolygon

# Farcaster handle for share text
VITE_FARCASTER_HANDLE=@unicornslfg

# Bluesky handle for share text
VITE_BLUESKY_HANDLE=@myunicornaccount

# ========================================
# OPTIONAL: Analytics
# ========================================

# Google Analytics 4 Measurement ID
VITE_GA_MEASUREMENT_ID=

# ========================================
# OPTIONAL: Wallet Activity Widget
# ========================================

# Enable/disable the wallet activity widget (default: true)
VITE_WALLET_ACTIVITY_ENABLED=true

# Minimum transactions required to claim (0 = no minimum)
VITE_TRANSACTION_THRESHOLD=0

